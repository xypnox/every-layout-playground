---
const modes = [
  'inherit',
  'horizontal-tb',
  'vertical-rl',
  'vertical-lr',
]
const Nums = [1, 2, 3, 4]
---

<div class="modes">
  {modes.map(mode => (
    <div class="mode" style={`writing-mode: ${mode}`}>
      {mode}
      {Nums.map(num => <div>{num}</div>)}
    </div>
  ))}
</div>

<style>
.modes {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}
.mode {
  place-self: center;
  border: 1px solid #444;
  width: 100%;
  padding: 1rem;
}
</style>
