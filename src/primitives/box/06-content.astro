---
const content = 'A very simple example of a very large paragraph. It contains a lot of words and is very long. The sentences are simple, but take up a lot of length to showcase the effects of box size depending on content.'
---

<div class="containers">
  <div class="container">
    <div>{content}</div>
  </div>
  <div class="container half">
    <div>{content}</div>
  </div>
</div>

<style>

.containers {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 1em;
  max-width: 100%;
}

.container {
  border: 1px solid #333;
  padding: 1em;
  flex: 2;
  height: max-content;
}

.container.half {
  flex: 1;
}

</style>
