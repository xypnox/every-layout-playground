---
import { humanizeHeading } from '../lib/strings';
interface Props {
  headings: string[]
}

const {headings} = Astro.props;

// heading will be of the form NN-WWW-WWW
// where NN are two digits and rest are - separated words
// We want to convert it to a human readable form
// Remove the numbers and replace - with space, then capitalize each word
---

<div class="page-nav">
  {headings.map(heading => (
    <a href={`#${heading}`}>{humanizeHeading(heading)}</a>
  ))}
</div>

<style>
.page-nav {
  z-index: 9;
  position: sticky;
  top: 3rem;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  gap: 1rem;
  background-color: #000;
  padding: 1rem;
  border-bottom: 1px solid #333;
}

.page-nav a {
  color: #999;
}
</style>



