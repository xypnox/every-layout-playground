---
import Nav from '../component/nav.astro';

interface Props {
	title: string;
  raw?: boolean;
}

const { title, raw } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    {!raw && (
      <Nav />
    )}
    <slot />
    {!raw && (
      <footer>
        <img src="/favicon.svg" alt="Every Layout Logo" />
        Built by <a href="https://www.xypnox.com/">xypnox</a>
      </footer>
    )}
	</body>
  <script defer src="https://code.iconify.design/iconify-icon/2.0.0/iconify-icon.min.js"></script>
</html>

<style is:global>
  :root {
    --page-width: 1400px;
  }
	html {
		font-family: 'Iosevka Term', monospace;
    color: #fff;
    background-color: #000;
    line-height: 1.5;
	}
  body {
    margin: 0;
    padding: 0;
  }
  * {
    box-sizing: border-box;
    scroll-margin: 8rem 0;
  }
  @media (max-width: 768px) {
    * {
      scroll-margin: 3rem 0;
    }
  }


  hr {
    border: 0;
    border-top: 2px dashed #333;
    width: 100%;
    margin: 2rem 0;
  }
  a {
    color: #fff;
    text-decoration-color: #999;
  }
	main {
		margin: auto;
		padding: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-inline: auto;
    width: var(--page-width);
    max-width: 100%;
    align-items: center;
  }
  pre, code {
    font-family: 'Iosevka Term', monospace;
    font-size: 1rem;
    line-height: 1.5;
  }

  footer {
    margin-top: 6rem;
    padding: 4rem 1rem;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  footer img {
    width: 3rem;
    height: 3rem;
    margin: 0 auto;
  }

</style>
